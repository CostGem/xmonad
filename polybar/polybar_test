[colors]
background = #282828
foreground = #ebdbb2

n-black    = #282828
n-red      = #d91b14
n-green    = #32ba16
n-yellow   = #ebdc13
n-blue     = #151cd6
n-magenta  = #b315d6
n-cyan     = #32c9b0
n-cyan-dark = #379e8d
n-white    = #a89984
n-pink     = #d61569

b-black    = #928374
b-red      = #fb4934
b-green    = #b8bb26
b-yellow   = #fabd2f
b-blue     = #83a598
b-magenta  = #d3869b
b-cyan     = #8ec07c
b-white    = #ffffff

[bar/top]
width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
underline-size = 3
 
padding-left = 2.5%
padding-right = 2.5%

module-margin-left = 19px
module-margin-right = 0%

font-0 = Fira Code:style=Regular:pixelsize=10;1
font-1 = fixed:pixelsize=10;1
font-2 = Twitter Color Emoji:style=Regular:scale=10;1

modules-left = workspaces window
modules-center = date
modules-right = pulseaudio backlight wired-network battery cpu memory xkeyboard

[module/workspaces]
type = internal/xworkspaces

pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = true

format = <label-state>

label-active = " %name% "
label-active-foreground = ${colors.n-cyan}
label-active-background = ${colors.background}
label-active-underline  = ${colors.n-white}

label-occupied = " %name% "
label-occupied-foreground = ${colors.n-cyan-dark}

label-empty = " %name% "
label-empty-foreground = ${colors.foreground}

[module/window]
type = internal/xwindow
format = <label>
format-foreground = ${colors.n-cyan}
label = %title%
label-maxlen = 50

[module/date]
type = internal/date
interval = 1.0
date = %A %d.%m.%Y
time = %H:%M

format-foreground = ${colors.b-yellow}
label = %date% %time%

[module/xkeyboard]
type = internal/xkeyboard
format = <label-layout>
format-foreground = ${colors.b-red}
format-overline = ${colors.b-red}
label-layout = <   %layout%   >

[module/battery]
type = internal/battery
full-at = 99
low-at = 25
battery = BAT1
adapter = ACAD
poll-interval = 10
format-charging = <label-charging>
format-discharging = <label-discharging>
time-format = %H:%M
label-charging-overline = ${colors.n-cyan}
label-charging = CHARGING %percentage%%
label-discharging-overline = ${colors.n-cyan}
label-discharging = BATTERY %percentage%%

[module/wired-network]
type = internal/network
interface = eno1
interface-type = wired
interval = 3.0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected-overline = ${colors.n-green}
label-disconnected-overline = ${colors.n-green}
label-connected = ETHERNET (%netspeed:9%  )
label-disconnected = NOT CONNECTED

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-muted = MUTED
label-muted-foreground = ${colors.n-red}
label-muted-overline = ${colors.n-red}
format-volume = <label-volume>
format-overline = ${colors.n-yellow}
label-volume = VOL %percentage%%
label-volume-overline = ${colors.n-blue}
format-muted = <label-muted>

[module/backlight]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
enable-scroll = true
format = <label>
format-overline = ${colors.n-pink}
label = BRIGHTNESS %percentage%%

[module/cpu]
type = internal/cpu
interval = 1
format-overline = ${colors.n-magenta}
label = CPU %percentage:2%%

[module/memory]
type = internal/memory
interval = 1
format-overline = ${colors.n-green}
label = RAM %percentage_used:2%%